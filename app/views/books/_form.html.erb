<%= form_for @book, remote: true do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br><br>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <br><br>
  <h4>Pages</h4>
    <%= f.fields_for :book_pages do |ff| %>
      <%= ff.label :body %>
      <%= ff.text_area :body, rows: 5 %>
    <% end %>
  <br><br>

  <%= f.submit %>
<% end %>
